<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">
<title><%= title %></title>
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" rel="stylesheet" crossorigin="anonymous">

<link rel='stylesheet' href='/stylesheets/style.css' />
<link rel='stylesheet' href='/stylesheets/bootstrap.css' />
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="http://code.jquery.com/jquery-latest.js"></script>
<script src="/javascripts/jquery.easyPaginate.js"></script>
<script>
$(document).ready(function(){
    $("a.menuList").click(function(){
        $(".subMenu").toggle();
    });

});

</script>
</head>
<body class="home">
    <div class="container-fluid display-table">
        <div class="row display-table-row">
            <div class="col-md-2 col-sm-1 hidden-xs display-table-cell v-align box" id="navigation">
                <div class="logo">
                    
                </div>
                <div class="navi">
                    <ul>
                        <li class="active"><a href="javascript:void(0)" class="menuList"><i class="fa fa-server" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Option</span></a></li>
                        <li><a href="#"><i class="fa fa-th" aria-hidden="true"></i><span class="hidden-xs hidden-sm">Quantity</span></a>
                        <input type="number" id="quantity" onchange="quantity(this.value)" placeholder="Type here" class="inputleft">
                        </li>
                </div>
					<div class="subMenu" style="display: none;" >
						<select name="" class="selectDrop" onchange="quantity_val(this.value)">
							<option value="" selected="selected" disabled="disabled">Dropdown</option>
							<option value="A">Item A</option>
							<option value="B">Item B</option>
						</select>
					</div>
            	</div>
            <div class="col-md-10 col-sm-11 display-table-cell v-align">
                <!--<button type="button" class="slide-toggle">Slide Toggle</button> -->
                <div class="row">
                    <header>
                        <div class="col-md-12">
                            <nav class="navbar-default pull-left">
                                <div class="navbar-header">
                                    <button type="button" class="navbar-toggle collapsed" data-toggle="offcanvas" data-target="#side-menu" aria-expanded="false">
                                        <span class="sr-only">Toggle navigation</span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                        <span class="icon-bar"></span>
                                    </button>
                                </div>
                            </nav>
                          
                        </div>
                      
                    </header>
                </div>
                <div class="user-dashboard">
                    <div class="row">
                       <div class="col-md-12 col-sm-12 col-xs-12 gutter">
                         <div class="sales">
						<ul id ="item">
						</ul>
                         </div>
			    	  <div class="paginate text-center" ><!-- remove width id you don't need it-->
			         <ul class="pagination">
			           <li><a href="#"rel="prev" class="page-prev"><span class="fa fa-angle-left"></span></a></li>
			           <li><a href="#" rel="next" class="page-next"><span class="fa fa-angle-right"></span></a></li> 
			         </ul>
			         <div class="clearfix"></div>
			        </div>
                       </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script>
function quantity(val) {
    var $newdiv;
    var test = val;
     for (var i = 1; i <= val; i++) {
        //$newdiv = $('<div>Hello</div>').text(i);
        console.log(val)
        $('#item').append('<li style="text-align: center;"><span>'+ i +'</span>Item<b class="number">'+ test  +'</b></li>');
      }
     $('#item').easyPaginate({
	paginateElement: 'li',
	elementsPerPage: 3,
	effect: 'climb'
});
}
function quantity_val(val){
	//$('.number').replace('<li style="text-align: center;">Item'+ val  +'</li>');
	$('.number').html(val);

}
</script>